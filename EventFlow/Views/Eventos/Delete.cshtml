@model EventFlow.Models.Evento

@{
    ViewData["Title"] = "Excluir Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Excluir Evento</h1>
</div>

<div class="form-container">
    <h3>Tem certeza de que deseja excluir este evento?</h3>
    <div class="evento-details">
        <h4>Detalhes do Evento</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantidadeParticipantes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantidadeParticipantes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrevisaoClimatica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrevisaoClimatica)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Organizador)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Organizador.Nome)
            </dd>
        </dl>
    </div>

    <div class="form-actions mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ml-2">Voltar à Lista</a>
    </div>
</div>
