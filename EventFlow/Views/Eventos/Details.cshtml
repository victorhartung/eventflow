@model EventFlow.Models.Evento

@{
    ViewData["Title"] = "Detalhes do Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Detalhes do Evento</h1>
</div>

<div class="evento-details">
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeParticipantes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeParticipantes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrevisaoClimatica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrevisaoClimatica)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizador.Nome) - @Html.DisplayFor(model => model.Organizador.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Bairro)
        </dd>
    </dl>

    @Html.Partial("~/Views/Enderecos/EnderecoDetails.cshtml", Model.Endereco)
</div>

<div class="form-actions mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar à Lista</a>
</div>
