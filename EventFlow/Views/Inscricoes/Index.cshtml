@model IEnumerable<EventFlow.Models.Inscricao>

@{
    ViewData["Title"] = "Lista de Inscrições";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0 mt-3">Inscrições</h1>
</div>

<div class="actions mb-3">
    <a asp-action="Create" class="btn btn-primary">Nova Inscrição</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Participante)</th>
            <th>@Html.DisplayNameFor(model => model.Evento)</th>
            <th>@Html.DisplayNameFor(model => model.DataInscricao)</th>
            <th>@Html.DisplayNameFor(model => model.StatusPagamento)</th>
            <th>@Html.DisplayNameFor(model => model.MetodoPagamento)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Participante.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Evento.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.DataInscricao)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusPagamento)</td>
                <td>@Html.DisplayFor(modelItem => item.MetodoPagamento)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
